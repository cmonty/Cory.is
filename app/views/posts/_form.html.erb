<%= form_for @post do |f| %>
	<%= render "shared/form_errors", :object => @post %>
	<fieldset>
		<dl>
			<dt><%= f.label :title, "Title" %></dt>
			<dd><%= f.text_field :title %></dd>
			<dt><%= f.label :body, "Body" %></dt>
			<dd><%= f.text_area :body %></dd>
		</dl>
	</fieldset>
	<fieldset>
		<%= f.fields_for :photo do |photo| %>
		<dl>
			<dt><%= photo.label :path, "File" %></dt>
			<dd><%= photo.file_field :path %></dd>
		</dl>
		<% end %>
	</fieldset>
	<%= f.submit %>	
<% end %>