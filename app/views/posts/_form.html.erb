<%= form_for @post do |f| %>
	<%= render "shared/form_errors", :object => @post %>
	<fieldset>
		<dl>
			<dt><%= f.label :title, "Title" %></dt>
			<dd><%= f.text_field :title %></dd>
			<dt><%= f.label :body, "Body" %></dt>
			<dd><%= f.text_area :body %></dd>
		</dl>
	</fieldset>
	<%= f.submit %>	
<% end %>