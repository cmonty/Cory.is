<%= form_for @post, :html => { :multipart => true } do |f| %>
	<%= render "shared/form_errors", :object => @post %>
	<fieldset>
		<dl>
			<dt><%= f.label :title, "Title" %></dt>
			<dd><%= f.text_field :title %></dd>
			<dt><%= f.label :body, "Body" %></dt>
			<dd><%= f.text_area :body %></dd>
			<dt><%= f.label :photo, "Image" %></dt>
			<dd><%= f.file_field :photo %></dd>
			<dt><%= f.label :category_id, "Category" %></dt>
			<dd><%= f.collection_select(:category_id, Category.all, :id, :title) %></dd>
		</dl>
	</fieldset>
	<%= f.submit %>	
<% end %>