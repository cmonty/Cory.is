<%= form_for @post, :html => { :multipart => true } do |f| %>
	<%= render "shared/form_errors", :object => @post %>
	<fieldset>
		<dl>
			<dt><%= f.label :title, "Title" %></dt>
			<dd><%= f.text_field :title %></dd>
			<dt><%= f.label :body, "Body" %></dt>
			<dd><%= f.text_area :body %></dd>
			<dt><%= f.label :photo, "Image" %></dt>
			<dd><%= f.file_field :photo %></dd>
		</dl>
	</fieldset>
	<fieldset>
		<%= fields_for @post.categories.build do |category| %>
		<dl>
			<dt><%= category.label :title, "Category" %></dt>
			<dd><%= category.text_field :title %></dd>
			<dt><%= category.label :type, "Type" %></dt>
			<dd><%= category.text_field :type %></dd>
		</dl>
		<% end %>
	</fieldset>
	<%= f.submit %>	
<% end %>