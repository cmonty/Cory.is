<%= form_for @user do |f| %>
	<%= render "shared/form_errors", :object => @user %>
	<fieldset>
		<dl>
			<dt><%= f.label :name, "Name" %></dt>
			<dd><%= f.text_field :name %></dd>
			<dt><%= f.label :email, "Email" %></dt>
			<dd><%= f.text_field :email %></dd>
			<dt><%= f.label :new_password, "Password" %></dt>
			<dd><%= f.password_field :new_password %></dd>
			<dt><%= f.label :new_password_confirmation, "Repeat Password" %></dt>
			<dd><%= f.password_field :new_password_confirmation %></dd>
		</dl>
	</fieldset>
	<%= f.submit %>	
<% end %>