<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <title><%= data.page.title || "cory.is" %></title>

    <%= stylesheet_link_tag "normalize", "grid", "type", "all" %>
    <%= javascript_include_tag  "all" %>
    <script type="text/javascript" src="//use.typekit.net/fpf8apt.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>

  <body class="<%= page_classes %>">
    <div id="page-wrap" class="wrap">
      <section class="grids">
        <header id="main-sidebar" class="grid-one-third">
          <h1><%= data.page.article_title %></h1>
          <h4 id="byline"><span>by</span> Cory Monty</h4>
          <p id="bio">a chicago software developer</p>
        </header>
        <article id="article-wrap" class="grid-two-thirds">
          <%= yield %>
        </article>
      </section>
    </div>
  </body>
</html>
